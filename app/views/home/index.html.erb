<%= tag.div class: "relative bg-gray-900" do %>
  <%= tag.div class: "mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8" do %>
    <%= tag.div class: "px-6 pt-10 pb-24 sm:pb-32 lg:col-span-7 lg:px-0 lg:pt-40 lg:pb-48 xl:col-span-6" do %>
      <%= tag.div class: "mx-auto max-w-lg lg:mx-0" do %>
        <%= image_tag "https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=500",
                      alt: "Your Company",
                      class: "h-11" %>
        <%= tag.div class: "hidden sm:mt-32 sm:flex lg:mt-16" do %>
          <%= tag.div class: "relative rounded-full px-3 py-1 text-sm/6 text-gray-400 ring-1 ring-white/10 hover:ring-white/20" do %>
            Anim aute id magna aliqua ad ad non deserunt sunt.
            <%= link_to "#", class: "font-semibold whitespace-nowrap text-indigo-400" do %>
              <%= tag.span "", "aria-hidden": "true", class: "absolute inset-0" %>
              Read more <%= tag.span "→", "aria-hidden": "true" %>
            <% end %>
          <% end %>
        <% end %>
        <%= tag.h1 "Data to enrich your business",
                   class: "mt-24 text-5xl font-semibold tracking-tight text-pretty text-white sm:mt-10 sm:text-7xl" %>
        <%= tag.p "Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat.",
                  class: "mt-8 text-lg font-medium text-pretty text-gray-400 sm:text-xl/8" %>
        <%= tag.div class: "mt-10 flex items-center gap-x-6" do %>
          <%= link_to "Get started", "#",
                      class: "rounded-md bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
          <%= link_to "#", class: "text-sm/6 font-semibold text-white" do %>
            Learn more <%= tag.span "→", "aria-hidden": "true" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= tag.div class: "relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0" do %>
      <%= image_tag "https://images.unsplash.com/photo-1487017159836-4e23ece2e4cf?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2102&q=80",
                    alt: "",
                    class: "aspect-3/2 w-full bg-gray-800 object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full" %>
    <% end %>
  <% end %>
<% end %>
